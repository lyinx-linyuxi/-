.m-header{
  background: #ffc3c3;
}
.drawer{
  z-index: 9999;
}
.drawer-container{
	width:50vw;
	height: 100vh;
	background:#fff;
  box-sizing: border-box;
  padding: 40px 0;
}
.drawer-container .h1{
  padding: 0 30px 20px;
  display: block;
}
.scroll-view{
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
  z-index: 1;
}
.clear{
  display: block;
  clear: both;
  width: 100%;
  height: 0;
  overflow: hidden;
}
.home-panel{
  padding: 10px;
  background: #ffc3c3;
}
.home-panel-userinfo{
  position: relative;
  background: #fff;
  padding: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  overflow: hidden;
}
.userinfo-left .title{
  font-size: 18px;
  margin-bottom: 10px;
}
.userinfo-left .attribute{
  overflow: hidden;
  height: 30px;
  margin-bottom: 15px;
  font-size: 12px;
  color: #999;
}
.userinfo-left .list .item{
  line-height: 20px;
  height: 25px;
  font-size: 12px;
  color: #999;
}
.userinfo-right .petImage{
  position: absolute;
  top: 10px;
  right: 10px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
}
.userinfo-right .petNo{
  position: absolute;
  bottom: 10px;
  right: 10px;
  font-size: 12px;
  color: #999;
}
.home-panel-progress{
  padding: 10px 0;
}
.home-panel-progress .content{
  padding-right: 10px;
}
.home-panel-progress .btn-group{
  text-align: right;
}
.home-panel-progress .btn-group .btn{
  height: 20px;
  line-height: 20px;
  margin: 0;
}
.home .tabs{
  background: #fff;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
}
.home .tabs .tab-item{
  flex: 1;
  text-align: center;
}
.home .tabs .tab-item text{
  color: #999;
  font-size: 12px;
}
.home .tabs .tab-item .num{
  font-size: 18px;
  height: 20px;
  font-weight: bold;
}
.i-steps{
  padding: 10px;
}
.i-steps .step .i-step-ico{
  font-size: 0;
}
.i-steps .steps-title{
  margin-bottom: 5px;
  color: #717679;
}
.i-steps .day{
  margin-left: 10px;
  font-size: 12px;
  color: #999;
  font-weight: normal;
}
.i-steps .item{
  background: #fff;
  padding: 10px;
  overflow: hidden;
  position: relative;
  box-shadow:0 0 10px rgba(0, 0, 0, 0.1);
}
.i-steps .item .avatar{
  position: absolute;
  top: 10px;
  right: 10px;
  width: 50px;
  height: 50px;
  line-height: 50px;
  border-radius: 0;
}
.i-steps .item .content-left{
  height: 50px;
  padding-right: 50px;
}
.i-steps .item .content-left .title{
  font-size: 16px;
  margin-bottom: 4px;
  color: #000;
  font-weight: 500;
}
.i-steps .item .content-left .content{
  color: #999;
  font-weight: normal;
}
.Anthelmintic{
  background: #f38a5a !important;
}
.weight{
  background: #9890e3 !important;
}












