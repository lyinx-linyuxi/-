.home-panel{
  padding: 10px;
  background:rgb(110, 28, 28);
}

.home-panel-userinfo{
  position: relative;
  background:rgb(175, 175, 15);
  padding: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  overflow: hidden;
}

.userinfo-left .title{
  font-size: 18px;
  margin-bottom: 10px;
  color: green;
}

.userinfo-left .attribute{
  overflow: hidden;
  height: 30px;
  margin-bottom: 15px;
  font-size: 12px;
  color:red;
}

.userinfo-left .list .item{
  line-height: 20px;
  height: 25px;
  font-size: 12px;
  color:blue;
}

.userinfo-right .petImage{
  position: absolute;
  top: 10px;
  right: 10px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-right .petNo{
  position: absolute;
  bottom: 10px;
  right: 10px;
  font-size: 12px;
  color: #999;
}

.home-panel-progress{
  padding: 10px 0;
}