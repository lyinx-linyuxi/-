.about{
  position: fixed;
  top: 70px;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 20px;
}
.avatar{
  text-align: center;
  display: block;
  width: 68px;
  height: 68px;
  margin: 0 auto;
}
.title{
  color: #ffc3c3;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 40px;
}
.content{
  text-indent: 2em;
  font-size: 14px;
  margin-bottom: 10px;
}
.text{
  margin-bottom: 10px;
  font-size: 14px;
  color: #999;
}
.text navigator{
  display: inline-block;
}
.m40{
  margin-bottom: 40px;
}